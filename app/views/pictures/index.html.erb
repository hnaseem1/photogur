
  <header>

  <h1>Pictures</h1>
  <% if current_user %>
    <%= link_to("New Picture", new_picture_path) %>
  <% end %>
  </header>

  <h1>Most recent pictures</h1>
  <ul>
    <% @most_recent_pictures.each do |picture| %>
      <li><%= picture.title %></li>
    <% end %>
  </ul>



  <h1>All pictures</h1>
  <div class="grid-class">


  <% @pictures.each do |picture| %>
    <div class="photo">
    <p><%= picture.title %>, <%= picture.artist %></p>
    <a href= "/pictures/<%= picture.id %>">
    <img src="<%= picture.url %>" alt="<%= picture.title %>"></a>
    </div>
  <% end %>
</div>

  <% if @created_a_month_ago %>
    <h1>Older than 1 month</h1>
    <ul>
      <% @created_a_month_ago.each do |picture| %>
        <li><%= picture.title %></li>
        <li><%= @created_a_month_ago%></li>
      <% end %>
    </ul>
  <% end %>
